# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# all files
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 79
trim_trailing_whitespace = true

[*.java]
indent_style = tab
indent_size = 4

[*.{rs,py}]
indent_size = 4

[*.{html,tex}]
max_line_length = off

[Makefile]
indent_style = tab
indent_size = 8
